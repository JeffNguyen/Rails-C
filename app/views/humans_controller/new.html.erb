<form action="/humans" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>First Name
    <input type="text" name="human[fname]" value="<%= @human.fname %>">
  </label>

  <label>Last Name
    <input type="text" name="human[lname]" value="<%= @human.lname %>">
  </label>

  <label>Address</label>
  <select name="human[house_id]">
    <% House.all.each do |house| %>
      <option value="<%= house.id%>"><%= house.address %></option>
    <% end %>
  </select>

  <input type="submit">
</form>

<a href="/humans"><< Back to Index</a>

<ul>
  <% if session[:errors] %>
    <% session[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
</ul>

